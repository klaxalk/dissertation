% Change the aspect of sidebars, footers and headers
\usecolortheme{blackbird}

% 'Inner color theme': 
% Change the aspects of blocks for instance.
\usecolortheme{rose}

% Themes for boxes, lists' bullets...:
\useinnertheme[shadow]{rounded}
